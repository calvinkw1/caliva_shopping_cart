<% if @order_items.size == 0 %>
  <p class="text-center">
    You haven't added any items to your shopping cart yet!
    <br>
    <br>
    <button type="button" class="btn btn-primary"><%= link_to 'Back to Products', '/' %></button>
  </p>
<% else %>
  <button type="button" class="btn btn-primary"><%= link_to 'Continue shopping', '/' %></button>
  <br>
  <br>
  <div id="checkout" class="text-right">
    <%= render new_charge_path, collection: @subtotal %>
  </div>
  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
  <% end %>
  <br>
  <button type="button" class="btn btn-primary"><%= link_to 'Continue shopping', '/' %></button>
  <br>
  <br>
  <div id="checkout" class="text-right">
    <%= render new_charge_path, collection: @subtotal %>
  </div>
<% end %>