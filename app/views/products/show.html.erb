<p id="notice"><%= notice %></p>

<div class='product-details'>
  <p id='title'><%= @product.title %></p>
  <div id='desc'>
    <strong>Description:</strong>
    <% if @list && @desc %>
      <%= @desc %>
      <ul>
        <% @list.each do |item| %>
            <li><%= item %></li>
        <% end %>
      </ul>
    <% else %>
      <%= @product.description %>
    <% end %>
  </div>
  <br>
  <p>
    Price: <strong><%=h @product.price == "0" ? "No pricing info." : number_to_currency(@product.price) %></strong>
    <span><%= button_to 'Add To Cart', order_items_path(@product.id) %></span>
  </p>
  <br>
  <p><strong>View on <%= link_to 'Slickdeals', @product.link %></strong></p>

  <br>
  <%= link_to 'Back', products_path %>
</div>

<div id='img'><img src=<%= @product.image_url %>></div>